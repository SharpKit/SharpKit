<Addin namespace   = "MonoDevelop"
       id          = "SharpKit"
       name        = "Mono for SharpKit"
       author      = "Andrew Witte"
       copyright   = "BSD-2"
       url         = "http://www.reign-studios.com"
       description = "Support for developing SharpKit applications."
       category    = "SharpKit Development"
       version     = "1.0.0">
       
	<Dependencies>
		<Addin id="Ide" version="4.0" />
		<Addin id="Core" version="4.0" />
	</Dependencies> 
	
	<!-- Template Types -->
	<Extension path = "/MonoDevelop/Ide/ProjectTemplates">
		<ProjectTemplate id = "SharpKitProject" resource = "SharpKitProject.xpt.xml"/>
	</Extension>
	
